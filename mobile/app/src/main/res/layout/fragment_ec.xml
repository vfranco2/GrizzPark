    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="252dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/line"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="16dp" />
